<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.gwt='urn:import:org.gwtbootstrap3.client.ui.gwt'>
    <b:Container>
        <b:Row>
            <b:Column size="MD_4">
                <b:InputGroup>
                    <b:TextBox ui:field="utrSelect" text="NM_005225"/>
                    <b:InputGroupButton>
                        <b:Button ui:field="selectButton">Select UTR</b:Button>
                    </b:InputGroupButton>
                </b:InputGroup>
            </b:Column>
            <b:Column size="MD_4">
                <b:InputGroup>
                    <b:TextBox ui:field="mirSelect" text="hsa-miR-4446-3p"/>
                    <b:InputGroupButton>
                        <b:Button ui:field="selectMirButton">Select MIR</b:Button>
                    </b:InputGroupButton>
                </b:InputGroup>
            </b:Column>
            <b:Column size="MD_4">
                <b:InputGroup>
                    <b:InputGroupAddon>
                        Threshold
                    </b:InputGroupAddon>
                    <b:TextBox ui:field="fThreshold" text="0.99"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row>
            <b:Column size="MD_12">
                <b.gwt:DataGrid ui:field="resultTable" bordered="true" condensed="true" striped="true"
                                hover="true" height="800px" width="100%"/>
            </b:Column>
        </b:Row>
    </b:Container>
</ui:UiBinder>