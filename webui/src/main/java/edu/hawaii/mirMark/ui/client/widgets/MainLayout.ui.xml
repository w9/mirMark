<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:b.gwt='urn:import:org.gwtbootstrap3.client.ui.gwt'
             xmlns:b.select='urn:import:org.gwtbootstrap3.extras.select.client.ui'>
    <b:Container>
        <b:Row>
            <b:Column size="MD_4">
                <b:InputGroup>
                    <b:TextBox ui:field="queryRefseqTextBox">NM_005225</b:TextBox>
                    <b:InputGroupButton>
                        <b:Button ui:field="queryRefseqButton">Query by RefSeq ID</b:Button>
                    </b:InputGroupButton>
                </b:InputGroup>
            </b:Column>
            <b:Column size="MD_4">
                <b:InputGroup>
                    <b:TextBox ui:field="queryMirNameTextBox">hsa-miR-1</b:TextBox>
                    <b:InputGroupButton>
                        <b:Button ui:field="queryMirNameButton">Query by MiR Name</b:Button>
                    </b:InputGroupButton>
                </b:InputGroup>
            </b:Column>
            <b:Column size="MD_4">
                <b:InputGroup>
                    <b:TextBox ui:field="querySymbolTextBox">TP53</b:TextBox>
                    <b:InputGroupButton>
                        <b:Button ui:field="querySymbolButton">Query by Gene Symbol</b:Button>
                    </b:InputGroupButton>
                </b:InputGroup>
            </b:Column>
            <b:Column size="MD_4">
                <b:InputGroup>
                    <b:InputGroupAddon>
                        Threshold
                    </b:InputGroupAddon>
                    <b:TextBox ui:field="fThreshold">0.99</b:TextBox>
                </b:InputGroup>
            </b:Column>
            <b:Column size="MD_8">
                <g:FlowPanel>
                    <b:InlineRadio name="method-of-choice" ui:field="fMethodOfChoiceMirMark">MirMark</b:InlineRadio>
                    <b:InlineRadio name="method-of-choice" ui:field="fMethodOfChoiceTargetScan">TargetScan</b:InlineRadio>
                    <b:InlineRadio name="method-of-choice" ui:field="fMethodOfChoiceMiRanda">MiRanda</b:InlineRadio>
                </g:FlowPanel>
            </b:Column>
            <b:Column size="MD_12">
                <b.gwt:DataGrid ui:field="resultTable" bordered="true" condensed="true" striped="true"
                                hover="true" height="800px" width="100%"/>
            </b:Column>
        </b:Row>
    </b:Container>
</ui:UiBinder>